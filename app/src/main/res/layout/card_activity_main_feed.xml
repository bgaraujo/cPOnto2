<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="15dp"
        tools:style="@style/CardView"
        app:cardBackgroundColor="@android:color/white"
        app:cardElevation="24dp">

        <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="85dp"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="3dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="13dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/card_activit_header_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="----"
                    android:textAlignment="center"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:textSize="24sp"/>

                <LinearLayout
                    android:id="@+id/card_main_linear_in"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        app:srcCompat="@drawable/ic_flag" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="22dp"
                        android:text="Entrou"
                        android:textColor="@color/common_google_signin_btn_text_dark_focused"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/card_main_text_time_in"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/common_google_signin_btn_text_dark_focused"
                        android:text="-------------"
                        android:textAlignment="viewEnd"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/card_main_linear_lunch_start"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        app:srcCompat="@drawable/ic_local_dining" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_marginStart="22dp"
                        android:text="Inicio almoço"
                        android:textColor="@color/common_google_signin_btn_text_dark_focused"
                        android:textSize="18sp"/>
                    <TextView
                        android:id="@+id/card_main_text_lunch_start"
                        android:textColor="@color/common_google_signin_btn_text_dark_focused"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="-----------"
                        android:textAlignment="viewEnd"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/card_main_linear_lunch_finish"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        app:srcCompat="@drawable/ic_local_dining" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="22dp"
                        android:text="Termino almoço"
                        android:textColor="@color/common_google_signin_btn_text_dark_focused"
                        android:textSize="18sp"/>
                    <TextView
                        android:id="@+id/card_main_text_lunch_finish"
                        android:textColor="@color/common_google_signin_btn_text_dark_focused"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="-----------"
                        android:textAlignment="viewEnd"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/card_main_linear_out"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        app:srcCompat="@drawable/ic_directions_bike" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="22dp"
                        android:text="Saida"
                        android:textColor="@color/common_google_signin_btn_text_dark_focused"
                        android:textSize="18sp"
                        app:layout_constraintStart_toEndOf="@+id/imageView3"
                        tools:layout_editor_absoluteY="4dp" />
                    <TextView
                        android:id="@+id/card_main_text_out"
                        android:textColor="@color/common_google_signin_btn_text_dark_focused"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="----------"
                        android:textAlignment="viewEnd"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Saldo do dia"
                        android:textSize="20dp"
                        android:textColor="@color/colorAccent"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="20dp"
                        android:paddingLeft="20dp"
                        android:textColor="@color/colorAccent"/>
                </LinearLayout>

            </LinearLayout>

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>